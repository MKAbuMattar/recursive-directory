{
  "name": "recursive-directory",
  "version": "0.0.0-rc-0.0.4",
  "description": "Recursive Directory is an npm package that allows you to directory and returns a list of files.",
  "keywords": [
    "recursive",
    "directory",
    "typescript"
  ],
  "license": "MIT",
  "author": {
    "name": "Mohammad Abu Mattar",
    "email": "mohammad.khaled@outlook.com",
    "url": "https://mkabumattar.github.io/"
  },
  "homepage": "https://github.com/MKAbuMattar/recursive-directory#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MKAbuMattar/recursive-directory.git"
  },
  "bugs": {
    "url": "https://github.com/MKAbuMattar/recursive-directory/issues"
  },
  "scripts": {
    "clean:lib": "rm -rf lib",
    "lint:fix": "eslint --ignore-path .eslintignore \"src/**/*.ts\" --fix",
    "lint:check": "eslint --ignore-path .eslintignore \"src/**/*.ts\"",
    "prettier:fix": "prettier -w ./src --ignore-unknown --no-error-on-unmatched-pattern",
    "prettier:check": "prettier --check ./src --no-error-on-unmatched-pattern",
    "check": "yarn lint:check && yarn prettier:check",
    "fix": "yarn lint:fix && yarn prettier:fix",
    "test:coverage": "jest --coverage",
    "test": "jest",
    "play:ts": "nodemon -e ts -w . -x esr src/playground/playground.ts",
    "play:mjs": "nodemon ./src/playground/playground.mjs",
    "play:cjs": "nodemon ./src/playground/playground.cjs",
    "build:lib": "tsc --p tsconfig.cjs.json && rollup --config rollup.config.js",
    "build": "yarn clean:lib && yarn build:lib",
    "publish:lib:latest": "npm publish",
    "publish:lib:beta": "npm publish --tag beta",
    "prepare": "husky install"
  },
  "dependencies": {
    "glob": "8.0.3",
    "zod": "3.17.10"
  },
  "devDependencies": {
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@rollup/plugin-typescript": "8.3.4",
    "@types/glob": "7.2.0",
    "@types/jest": "28.1.6",
    "@types/mock-fs": "4.13.1",
    "@types/node": "18.6.4",
    "@typescript-eslint/eslint-plugin": "5.32.0",
    "@typescript-eslint/parser": "5.32.0",
    "esbuild": "0.14.53",
    "esbuild-runner": "2.2.1",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-unused-imports": "2.0.0",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "mock-fs": "5.1.4",
    "prettier": "2.7.1",
    "rollup": "2.77.2",
    "ts-jest": "28.0.7",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./lib/index.mjs",
      "types": "./index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "/lib",
    "/index.d.ts"
  ],
  "support": {
    "backing": {
      "npm-funding": true
    }
  }
}
